<h1>All restaurants</h1>
<div class="container">
  <% @restaurants.each do |restaurant| %>
    <div class="restaurant">
      <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
      <p><%= restaurant.address %></p>
      <p><%= restaurant.phone_number %></p>
      <p><%= restaurant.category %></p>
    </div>
  <% end %>
</div>
